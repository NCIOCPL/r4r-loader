{   
    "logging": {
        "level": "info"
    },
    "pipeline": { 
        "source": {
            "type": "lib/sources/github-resource-source",
            "config": {
                "repoUrl": "https://github.com/bryanpizzillo/r4rcontent",
                "resourcesPath": "/resources",
                //"authentication": {
                //    "type": "token",
                //    "token": "SECRET"
                //}
            }
        },
        "transformers": [
            {
                "type": "lib/transformers/netlifymd-resource-transformer",
                "config": {
                 "mappingUrls": {
                    "docs": "https://raw.githubusercontent.com/bryanpizzillo/r4rcontent/master/data/docs.json",
                    "researchAreas": "https://raw.githubusercontent.com/bryanpizzillo/r4rcontent/master/data/researchAreas.json",
                    "researchTypes": "https://raw.githubusercontent.com/bryanpizzillo/r4rcontent/master/data/researchTypes.json",
                    "toolTypes": "https://raw.githubusercontent.com/bryanpizzillo/r4rcontent/master/data/toolTypes.json"
                 }
                }
            }
        ],
        "loader": {
            "type": "lib/loaders/elastic-resource-loader",
            "config": {
               "eshosts": [ "http://localhost:9200" ],
               "daysToKeep": 10,               
               "aliasName": "r4r_v1",
               "mappingPath": "es-mappings/mappings.json",
               "settingsPath": "es-mappings/settings.json"
            }
        }
    }
}